{
  "branches": [
    "main",
    {
      "name": "feature/*",
      "channel": false,
      "prerelease": "rc"
    }
  ],
  "preset": "conventionalcommits",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": [
              "termiverse/__init__.py"
            ],
            "from": "__version__ = \".*\"",
            "to": "__version__ = \"${nextRelease.version}\"",
            "results": [
              {
                "file": "termiverse/__init__.py",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": [
              "pyproject.toml"
            ],
            "from": "^version = \".*\"",
            "to": "version = \"${nextRelease.version}\"",
            "results": [
              {
                "file": "pyproject.toml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": [
              "Dockerfile"
            ],
            "from": "Version=\".*\"",
            "to": "Version=\"${nextRelease.version}\"",
            "results": [
              {
                "file": "Dockerfile",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": [
              "extras/helm/Chart.yaml"
            ],
            "from": "^appVersion: .*",
            "to": "appVersion: ${nextRelease.version}",
            "results": [
              {
                "file": "extras/helm/Chart.yaml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": [
              "extras/helm/Chart.yaml"
            ],
            "from": "^version: .*",
            "to": "version: ${nextRelease.version}",
            "results": [
              {
                "file": "extras/helm/Chart.yaml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "poetry build"
      }
    ],
    [
      "@alexbabel/semantic-release-docker",
      {
        "skipPublish": true,
        "buildArgs": [
          "--provenance=false",
          "--platform",
          "linux/amd64,linux/arm64",
          "--push"
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "Dockerfile",
          "termiverse/__init__.py",
          "extras/helm/Chart.yaml",
          "pyproject.toml",
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ]
      }
    ],
    [
      "@semantic-release/gitlab",
      {
        "gitlabUrl": "https://gitlab.com",
        "assets": [
          "dist/termiverse-*.gz",
          "dist/termiverse-*.whl"
        ]
      }
    ]
  ]
}
